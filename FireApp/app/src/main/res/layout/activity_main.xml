<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="utkarshjain.fireapp.MainActivity">

    <ImageView
        android:id="@+id/firebaseimg"
        android:layout_width="300px"
        android:layout_height="300px"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        app:srcCompat="@drawable/firebase" />

    <EditText
        android:id="@+id/password"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/inputfield"
        android:hint="Password..."
        android:paddingLeft="10dp"
        android:paddingRight="0dp"
        android:paddingTop="5dp"
        android:inputType="textPassword"
        android:maxLines="0"
        android:textSize="22sp"
        android:layout_below="@+id/email"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email"
        android:layout_marginTop="17dp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:inputType="textEmailAddress"
        android:background="@drawable/inputfield"
        android:hint="Email..."
        android:paddingLeft="10dp"
        android:paddingRight="0dp"
        android:paddingTop="5dp"
        android:maxLines="1"
        android:textSize="22sp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <Button
        android:id="@+id/login"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/button"
        android:text="Login"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_below="@+id/password"
        android:layout_alignLeft="@+id/password"
        android:layout_alignStart="@+id/password"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:fontFamily="serif-monospace"
        android:text="Firebase Login"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/firebaseimg"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/login"
        android:layout_alignStart="@+id/login"
        android:layout_alignTop="@+id/imageView"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:text="SignUp" />

    <Button
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick Image"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/signin"
        android:layout_alignStart="@+id/signin" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="140dp"
        app:srcCompat="@drawable/inputfield"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/login"
        android:layout_alignEnd="@+id/login" />

    <Button
        android:id="@+id/cam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/img"
        android:layout_alignLeft="@+id/signin"
        android:layout_alignStart="@+id/signin"
        android:text="Camera" />


</RelativeLayout>

